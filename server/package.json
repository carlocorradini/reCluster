{
  "name": "recluster-server",
  "version": "0.0.1",
  "private": true,
  "description": "reCluster server",
  "homepage": "https://github.com/carlocorradini/reCluster#readme",
  "bugs": {
    "url": "https://github.com/carlocorradini/reCluster/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlocorradini/reCluster.git",
    "directory": "server"
  },
  "license": "MIT",
  "author": "Carlo Corradini <carlo.corradini98@gmail.com>",
  "scripts": {
    "build": "npx tsc --build tsconfig.json",
    "build:clean": "npx tsc --build --clean tsconfig.json",
    "build:watch": "npx tsc --build --watch tsconfig.json",
    "check": "npx npm-run-all --npm-path npm --serial check:*",
    "check:db": "npm run db:format",
    "check:lint": "npx eslint .",
    "db:format": "npx prisma format",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev --name recluster",
    "db:reset": "npx prisma migrate reset",
    "db:start": "./scripts/database.sh",
    "db:studio": "npx prisma studio",
    "docker": "./scripts/dockerize.sh",
    "fix": "npx npm-run-all --npm-path npm --serial fix:*",
    "fix:db": "npm run db:format",
    "fix:lint": "npx eslint --fix .",
    "prepare": "npx ts-patch install -s && npm run db:generate",
    "start": "build/main.js",
    "start:dev": "npx ts-node-dev --respawn --clear --rs --transpile-only --require tsconfig-paths/register src/main.ts | npx pino-pretty"
  },
  "dependencies": {
    "@graphql-tools/schema": "^9.0.4",
    "@graphql-tools/utils": "^8.12.0",
    "@kubernetes/client-node": "^0.17.1",
    "@prisma/client": "^4.3.1",
    "apollo-server": "^3.10.3",
    "apollo-server-errors": "^3.3.1",
    "class-validator": "^0.13.2",
    "convert": "^4.7.0",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "graphql": "^15.8.0",
    "graphql-scalars": "^1.19.0",
    "json-bigint-patch": "^0.0.8",
    "jsonwebtoken": "^8.5.1",
    "pino": "^8.5.0",
    "recluster": "file:..",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-license-header": "^0.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "pino-pretty": "^9.1.1",
    "prisma": "^4.3.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "ts-patch": "^2.0.2",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3",
    "typescript-transform-paths": "^3.3.1"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "prisma": {
    "seed": "npx ts-node prisma/seed.ts"
  }
}
