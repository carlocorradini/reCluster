generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Node {
  id        String   @id @default(cuid())
  ram       BigInt
  cpu       Cpu      @relation(fields: [cpuId], references: [id], map: "cpu_id")
  cpuId     String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()

  disks      Disk[]
  interfaces Interface[]
}

model Disk {
  id     String @id @default(cuid())
  node   Node   @relation(fields: [nodeId], references: [id], map: "node_id")
  nodeId String
  name   String
  size   BigInt

  @@unique([nodeId, name])
}

model Interface {
  id      String         @id @default(cuid())
  node    Node           @relation(fields: [nodeId], references: [id], map: "node_id")
  nodeId  String
  name    String
  address String
  speed   Int
  wol     InterfaceWol[]

  @@unique([nodeId, name])
}

model Cpu {
  id              String          @id @default(cuid())
  architecture    CpuArchitecture
  flags           String[]
  cores           Int             @db.SmallInt
  vendor          CpuVendor
  family          Int             @db.SmallInt
  model           Int             @db.SmallInt
  name            String
  cacheL1d        Int             @map("cache_l1d")
  cacheL1i        Int             @map("cache_l1i")
  cacheL2         Int             @map("cache_l2")
  cacheL3         Int             @map("cache_l3")
  vulnerabilities String[]
  createdAt       DateTime        @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt       DateTime        @updatedAt @db.Timestamptz()

  nodes Node[]

  @@unique([vendor, family, model])
}

enum InterfaceWol {
  // Wke on ARP
  a
  // Wake on broadcast messages
  b
  // Disable
  d
  // Wake on MagicPacket
  g
  // Wake on multicast messages
  m
  // Wake on PHY activity
  p
  // Enable SecureOn password for MagicPacket
  s
  // Wake on unicast messages
  u
}

enum CpuArchitecture {
  x86
  x86_64
}

enum CpuVendor {
  AMD
  INTEL
}
