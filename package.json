{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "recluster",
  "version": "0.0.1",
  "description": "The reCluster is an architecture for a data centre that actively reduces its impact and minimizes its resource utilization",
  "author": "Carlo Corradini <carlo.corradini98@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "homepage": "https://github.com/carlocorradini/reCluster#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlocorradini/reCluster.git"
  },
  "bugs": {
    "url": "https://github.com/carlocorradini/reCluster/issues"
  },
  "keywords": [
    "reCluster",
    "cluster"
  ],
  "workspaces": [
    "packages/*",
    "subgraphs/*"
  ],
  "scripts": {
    "build": "npx tsc --build tsconfig.json",
    "build:clean": "npx tsc --build --clean tsconfig.json",
    "build:watch": "npx tsc --build --watch tsconfig.json",
    "check": "npx npm-run-all --npm-path npm --serial check:*",
    "check:format": "npx prettier --check .",
    "check:license": "npx license-check-and-add check -f license.json",
    "check:lint": "npx eslint .",
    "check:markdown": "npx markdownlint \"**/*.md\"",
    "check:spell": "npx cspell lint --config cspell.json --no-progress --show-context \"**\"",
    "fix": "npx npm-run-all --npm-path npm --serial fix:*",
    "fix:format": "npx prettier --write .",
    "fix:license": "npx license-check-and-add add -f license.json",
    "fix:lint": "npx eslint --fix .",
    "fix:markdown": "npx markdownlint --fix \"**/*.md\"",
    "prepare": "npx husky install && npx ts-patch install -s"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@cspell/dict-bash": "^2.0.2",
    "@cspell/dict-node": "^2.0.0",
    "@cspell/dict-npm": "^2.0.2",
    "@cspell/dict-typescript": "^2.0.0",
    "@cspell/eslint-plugin": "^5.19.5",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "cspell": "^5.19.5",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-license-header": "^0.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.4",
    "license-check-and-add": "^4.0.3",
    "lint-staged": "^12.3.7",
    "markdownlint-cli": "^0.31.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-node-dev": "^1.1.8",
    "ts-patch": "^2.0.1",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3",
    "typescript-transform-paths": "^3.3.1"
  }
}
