{
  "ignoreFile": ".gitignore",
  "license": "LICENSE",
  "trailingWhitespace": "TRIM",
  "defaultFormat": {
    "prepend": "/*",
    "append": "*/\n"
  },
  "licenseFormats": {
    "gitignore|npmignore|eslintignore|dockerignore|^Dockerfile|sh|py|graphql|yaml|yml": {
      "eachLine": {
        "prepend": "# "
      },
      "append": "\n"
    },
    "html|xml|svg": {
      "prepend": "<!--",
      "append": "-->\n"
    },
    "js|ts|css|scss|less|php|as|c|java|cpp|go|cto|acl": {
      "prepend": "/*",
      "eachLine": {
        "prepend": " * "
      },
      "append": " */\n"
    },
    "prisma": {
      "eachLine": {
        "prepend": "// "
      },
      "append": "\n"
    },
    "txt": {}
  },
  "ignore": [
    "**/build",
    "**/coverage",
    "**/mode_modules",
    "backend/migrations",
    ".github",
    ".husky",
    ".vscode",
    "**/*.md",
    "**/*.env",
    "**/*.env.*",
    "**/*.d.ts",
    "**/*.d.ts.map",
    "**/*.tar",
    "**/*.tar.gz",
    "**/.gitignore",
    "**/.gitmodules",
    "**/.commitlintrc",
    "**/.dockerignore",
    "**/.editorconfig",
    "**/.eslintignore",
    "**/.eslintrc",
    "**/.gitattributes",
    "**/.gitignore",
    "**/.lintstagedrc.js",
    "**/.markdownlint.json",
    "**/.markdownlintignore",
    "**/.npmrc",
    "**/.nvmrc",
    "**/.prettierignore",
    "**/.prettierrc",
    "**/.shellcheckrc",
    "**/cspell.json",
    "backend/docker/Dockerfile.rover",
    "linux/install.k3s.sh",
    "linux/install.node_exporter.sh",
    "dependencies/k3s",
    "dependencies/node_exporter"
  ]
}
