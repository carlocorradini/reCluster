# ================
# NODE
# ================
# Node environment
NODE_ENV="production"

# ================
# SERVER
# ================
# Server host
# HOST="0.0.0.0"
# Server port
PORT=8080

# ================
# LOGGER
# ================
# LOGGER_LEVEL="debug"

# ================
# DATABASE
# ================
# Database URL
DATABASE_URL="postgresql://recluster:password@localhost:5432/recluster?schema=public"

# ================
# SSH
# ================
# SSH username
# SSH_USERNAME="root"
# SSH private key
SSH_PRIVATE_KEY="/etc/recluster/certs/ssh.key"
# SSH passphrase
SSH_PASSPHRASE="password"

# ================
# TOKEN
# ================
# Token private key
TOKEN_PRIVATE_KEY="/etc/recluster/certs/token.key"
# Token public key
TOKEN_PUBLIC_KEY="/etc/recluster/certs/token.pub"
# Token passphrase
TOKEN_PASSPHRASE="password"
