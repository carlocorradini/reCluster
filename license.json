{
  "ignoreFile": ".gitignore",
  "license": "LICENSE",
  "trailingWhitespace": "TRIM",
  "defaultFormat": {
    "prepend": "/*",
    "append": "*/\n"
  },
  "licenseFormats": {
    "gitignore|npmignore|eslintignore|dockerignore|^Dockerfile|sh|py|graphql|^Vagrantfile|yaml|yml": {
      "eachLine": {
        "prepend": "# "
      },
      "append": "\n"
    },
    "html|xml|svg": {
      "prepend": "<!--",
      "append": "-->\n"
    },
    "js|ts|css|scss|less|php|as|c|java|cpp|go|cto|acl": {
      "prepend": "/*",
      "eachLine": {
        "prepend": " * "
      },
      "append": " */\n"
    },
    "prisma": {
      "eachLine": {
        "prepend": "// "
      },
      "append": "\n"
    },
    "txt": {}
  },
  "ignore": [
    "**/build",
    "**/coverage",
    "**/mode_modules",
    ".github",
    ".husky",
    ".vscode",
    "**/*.md",
    "**/*.env",
    "**/*.env.*",
    "**/*.d.ts",
    "**/*.d.ts.map",
    "**/*.tar",
    "**/*.tar.gz",
    "**/.commitlintrc",
    "**/.dockerignore",
    "**/.editorconfig",
    "**/.eslintignore",
    "**/.eslintrc",
    "**/.gitattributes",
    "**/.gitignore",
    "**/.lintstagedrc",
    "**/.markdownlint.json",
    "**/.markdownlintignore",
    "**/.npmrc",
    "**/.nvmrc",
    "**/.prettierignore",
    "**/.prettierrc",
    "**/.shellcheckrc",
    "**/cspell.json",
    "./server/prisma/migrations",
    "./configs/ssh/authorized_keys",
    "./configs/ssh/ssh_config",
    "./configs/ssh/sshd_config",
    "./distributions/arch/packages.x86_64"
  ]
}
