{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "useGitignore": true,
  "import": [
    "@cspell/dict-bash/cspell-ext.json",
    "@cspell/dict-node/cspell-ext.json",
    "@cspell/dict-npm/cspell-ext.json",
    "@cspell/dict-typescript/cspell-ext.json"
  ],
  "ignorePaths": [
    "build",
    "coverage",
    "node_modules",
    "package-lock.json",
    "license.json",
    "scripts/__logger.sh"
  ],
  "words": [
    "apollographql",
    "carlocorradini",
    "codepaths",
    "commitlint",
    "corradini",
    "graphqlid",
    "pino",
    "readlink" /* FIXME Remove when new version is available */,
    "recluster",
    "respawn",
    "supergraph",
    "tsbuildinfo",
    "tsdoc"
  ]
}
