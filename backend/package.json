{
  "name": "recluster-backend",
  "version": "0.0.1",
  "description": "reCluster backend",
  "author": "Carlo Corradini <carlo.corradini98@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "homepage": "https://github.com/carlocorradini/reCluster#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlocorradini/reCluster.git",
    "directory": "backend"
  },
  "bugs": {
    "url": "https://github.com/carlocorradini/reCluster/issues"
  },
  "workspaces": [
    "packages/*",
    "subgraphs/*"
  ],
  "scripts": {
    "build": "npx tsc --build tsconfig.json",
    "build:clean": "npx tsc --build --clean tsconfig.json",
    "build:watch": "npx tsc --build --watch tsconfig.json",
    "check": "npx npm-run-all --npm-path npm --serial check:*",
    "check:db": "npm run db:format",
    "check:lint": "npx eslint .",
    "db:format": "npx prisma format --schema schema.prisma",
    "db:generate": "npx prisma generate --schema schema.prisma",
    "db:generate:watch": "npx prisma generate --schema schema.prisma --watch",
    "db:migrate": "npx prisma migrate dev --schema schema.prisma --name recluster",
    "db:reset": "npx prisma migrate reset --schema schema.prisma",
    "db:studio": "npx prisma studio --schema schema.prisma",
    "fix": "npx npm-run-all --npm-path npm --serial fix:*",
    "fix:database": "npm run db:format",
    "fix:lint": "npx eslint --fix .",
    "prepare": "npx ts-patch install -s && npm run db:generate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-license-header": "^0.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "pino-pretty": "^7.6.1",
    "prisma": "^3.12.0",
    "ts-node-dev": "^1.1.8",
    "ts-patch": "^2.0.1",
    "tsconfig-paths": "^3.14.1",
    "typegraphql-prisma": "^0.20.2",
    "typescript": "^4.6.3",
    "typescript-transform-paths": "^3.3.1"
  }
}
